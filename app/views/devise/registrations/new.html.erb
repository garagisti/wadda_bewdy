<div class="row">
  <div class="col-sm-12">
    <header>
      <h2>Sign up</h2>
    </header>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form well' }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: 'email', class: 'form-control' %>
      </div>

      <div class="form-group">
        <% if @minimum_password_length %>
          <%= f.password_field :password, autocomplete: "off", placeholder: 'password minimum 8 characters', class: 'form-control' %>
        <% else %>
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'confirm password' , class: 'form-control'%>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: 'btn btn-default' %>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>
